<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".information">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/basic"
        android:text="Please Enter your Personal information"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/specialist_ET"
                android:layout_width="match_parent"
                android:background="@drawable/shape_edit_text"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="your Specialist"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/address_ET"
                android:background="@drawable/shape_edit_text"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="Address"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/price_ET"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_edit_text"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="Disclosure price"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/mobile_no_ET"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:background="@drawable/shape_edit_text"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="Mobile Number"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/whatsUp_no_ET"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:background="@drawable/shape_edit_text"
                android:hint="WhatsUp Number"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/messenger_link_ET"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="Messenger account link"
                android:background="@drawable/shape_edit_text"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/description_ET"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColorHint="@color/basic"
                android:shadowColor="@color/basic"
                android:hint="Description about you"
                android:background="@drawable/shape_edit_text"
                android:layout_height="50dp"/>
            <Button
            android:layout_width="wrap_content"
            android:id="@+id/save_Btn"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
            android:text="Save"
            android:padding="15dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/basic"
                android:layout_marginBottom="40dp"
            android:background="@drawable/shape_button_disable"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>